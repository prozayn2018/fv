<p id="notice"><%= notice %></p>

<h1>Markets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Current price</th>
      <th>Integer</th>
      <th>Fair value</th>
      <th>Discount value</th>
      <th>Ytd change</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @markets.each do |market| %>
      <tr>
        <td><%= market.name %></td>
        <td><%= market.current_price %></td>
        <td><%= market.integer %></td>
        <td><%= market.fair_value %></td>
        <td><%= market.discount_value %></td>
        <td><%= market.YTD_change %></td>
        <td><%= link_to 'Show', market %></td>
        <td><%= link_to 'Edit', edit_market_path(market) %></td>
        <td><%= link_to 'Destroy', market, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

